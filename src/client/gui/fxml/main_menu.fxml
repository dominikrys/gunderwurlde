<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root alignment="CENTER" style="-fx-spacing: 15px;" styleClass="background" stylesheets="@../css/menu_stylesheet.css" type="VBox" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
   <children>
      <Label id="title" alignment="CENTER" text="Gunderwurlde" textAlignment="CENTER">
         <font>
            <Font size="72.0" />
         </font>
         <styleClass>
            <String fx:value="gameTitle" />
            <String fx:value="manaspaceFontWhite" />
         </styleClass>
      </Label>
      <Button fx:id="playButton" mnemonicParsing="false" onAction="#playButtonPress" text="PLAY">
         <font>
            <Font name="Manaspace" size="34.0" />
         </font>
         <styleClass>
            <String fx:value="playButton" />
            <String fx:value="manaspaceFontWhite" />
         </styleClass></Button>
      <Button fx:id="highScoreButton" mnemonicParsing="false" onAction="#highScoreButtonPress" text="High Scores">
         <font>
            <Font name="Manaspace" size="34.0" />
         </font>
         <styleClass>
            <String fx:value="manaspaceFontWhite" />
            <String fx:value="menuButton" />
         </styleClass>
      </Button>
      <Button fx:id="settingsButton" mnemonicParsing="false" onAction="#settingsButtonPress" text="Settings">
         <font>
            <Font name="Manaspace" size="22.0" />
         </font>
         <styleClass>
            <String fx:value="manaspaceFontWhite" />
            <String fx:value="menuButton" />
         </styleClass></Button>
      <Button fx:id="helpButton" mnemonicParsing="false" onAction="#helpButtonPress" text="Help">
         <font>
            <Font name="Manaspace" size="22.0" />
         </font>
         <styleClass>
            <String fx:value="manaspaceFontWhite" />
            <String fx:value="menuButton" />
         </styleClass>
      </Button>
      <Button fx:id="quitButton" mnemonicParsing="false" onAction="#quitButtonPress" text="Quit">
         <font>
            <Font name="Manaspace" size="22.0" />
         </font>
         <styleClass>
            <String fx:value="manaspaceFontWhite" />
            <String fx:value="menuButton" />
         </styleClass></Button>
   </children>
</fx:root>
