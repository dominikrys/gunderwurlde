<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" style="-fx-spacing: 10px;" type="VBox" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label text="Play">
         <font>
            <Font name="Consolas" size="50.0" />
         </font>
      </Label>
      <Label text="Enter Name and Press Enter:">
         <font>
            <Font name="Consolas" size="24.0" />
         </font>
      </Label>
      <TextField fx:id="nameField" alignment="CENTER" onAction="#handleNameInput" promptText="Enter here..." style="-fx-max-width: 400;">
         <font>
            <Font name="Consolas" size="26.0" />
         </font>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </TextField>
      <Label fx:id="characterErrorText" alignment="CENTER" prefHeight="32.0" prefWidth="523.0" text="Name has to be up to 11 characters!" textAlignment="CENTER" textFill="#e50b0b" visible="false">
         <font>
            <Font name="Consolas" size="22.0" />
         </font>
      </Label>
      <HBox alignment="CENTER" prefHeight="59.0" prefWidth="600.0" style="-fx-spacing: 10px;">
         <children>
            <Button fx:id="singlePlayerButton" disable="true" mnemonicParsing="false" onAction="#singlePlayerButtonPress" text="Single Player">
               <font>
                  <Font name="Consolas" size="22.0" />
               </font>
            </Button>
            <Button fx:id="multiPlayerButton" disable="true" mnemonicParsing="false" onAction="#multiPlayerButtonPress" text="Multiplayer">
               <font>
                  <Font name="Consolas" size="22.0" />
               </font>
            </Button>
         </children>
      </HBox>
      <Button fx:id="backButton" mnemonicParsing="false" onAction="#backButtonPress" text="Back">
         <font>
            <Font name="Consolas" size="22.0" />
         </font>
      </Button>
   </children>
</fx:root>
